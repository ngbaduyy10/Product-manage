mixin alert-success
    - if (messages.info)
        .message.info(success-alert)
            div(class="alert alert-success")
                div #{messages.info}
                button.btn-close(type='button', aria-label='Close' close-alert)

mixin alert-error
    - if (messages.error)
        .message.error(success-alert)
            div(class="alert alert-danger")
                div #{messages.error}
                button.btn-close(type='button', aria-label='Close' close-alert)