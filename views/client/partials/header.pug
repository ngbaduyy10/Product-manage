include ../../mixins/subMenu.pug

header(style='position:sticky; top:0; z-index:1000;')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mx-3
        .col-3
            ul.navbar-nav
                li.nav-item
                    a.nav-link(aria-current='page' href='/' style='font-size: 20px;') Home
                li.nav-item.sub-menu
                    a.nav-link(href='/products' style='font-size: 20px;') Products
                    +sub-menu(categoryTree)
        .col-6.d-flex.justify-content-center
            form.mx-3.d-flex(action='/products', method='GET' style='width: 70%')
                input.form-control.me-1(type='search', placeholder='Search', name='keyword' value=keyword)
                button.btn.btn-outline-success(type='submit') Search
        .col-3.d-flex.justify-content-end(style='gap: 5px;')
            a.btn.btn-outline-warning(href='/cart') Cart (#{cart ? cart.totalQuantity : 0})
            if (user)
                a.btn.btn-secondary(href='/chat') Chat
                a.btn.btn-danger(href='/user/logout') Logout
            else
                a.btn.btn-primary(href='/user/login') Login
                a.btn.btn-success(href='/user/register') Register