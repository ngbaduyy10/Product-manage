include ../../mixins/subMenu.pug

header(style='position:sticky; top:0; z-index:1000;')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container
            ul.navbar-nav.me-auto
                li.nav-item
                    a.nav-link(aria-current='page', href='#') Home
                li.nav-item.sub-menu
                    a.nav-link(href='/products') Products
                    +sub-menu(categoryTree)
            form.mx-3.d-flex(action='/products', method='GET' style='width: 30%')
                input.form-control.me-1(type='search', placeholder='Search', name='keyword' value=keyword)
                button.btn.btn-outline-success(type='submit') Search
            a.btn.btn-outline-primary(href='/cart') Cart (#{cart.totalQuantity || 0})