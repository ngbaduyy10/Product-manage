include ../../mixins/subMenu.pug

header(style='position:sticky; top:0; z-index:1000;')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container-fluid
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto
                    li.nav-item
                        a.nav-link(aria-current='page', href='#') Home
                    li.nav-item.sub-menu
                        a.nav-link(href='#') Products
                        +sub-menu(categoryTree)
                form.d-flex
                    input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
                    button.btn.btn-outline-success(type='submit') Search