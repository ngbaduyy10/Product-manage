extends ../../layout/layoutDefault.pug
include ../../../mixins/alert.pug

block content
    +alert-success

    .container.my-5
        .row.d-flex.justify-content-center
            .col-9
                .row.mb-5
                    .col-4.d-flex.align-items-center.justify-content-center
                        img(src=product.thumbnail alt=`${product.title}` style='width: 100%')
                    .col-8
                        .mb-4
                            h1.text-uppercase #{product.title}
                            h2(style='color: green;') #{product.price}$
                            .discount.d-flex.align-items-center(style='gap: 6px;')
                                span Discount up to
                                span.mb-0(style='padding: 5px; background: red; color: white; border-radius: 5px;')  #{product.discountPercentage}%
                        form(action=`/cart/add/${product.id}` method='POST')
                            input.form-control.mb-2(style='width: 50%' name='quantity' type='number' value='1' min='1' max='10')
                            button.btn.btn-primary.w-50(type='submit') Add to cart
                .row
                    .col-12
                        h2 Description
                        p !{product.description}