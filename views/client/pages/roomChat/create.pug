extends ../../layout/layoutDefault.pug

block content
    .container.py-3
        .row.d-flex.justify-content-center.mb-3
            .col-md-12.col-lg-10.col-xl-8
                .row.mb-3
                    h3 Create Room
                .row
                    .col-6
                        form(method='POST' action='/room-chat/create')
                            .mb-2
                                label(for='title') Room Name
                                input.form-control(type='text' name='title' id='title' required)
                            .mb-2
                                h5 Friends
                            .row.mb-2
                                each friend in friends
                                    .col-6.mb-2
                                        .d-flex.align-items-center(style='gap: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 10px;')
                                            .img
                                                img(
                                                    src='https://miamistonesource.com/wp-content/uploads/2018/05/no-avatar-25359d55aa3c93ab3466622fd2ce712d1.jpg'
                                                    style='width: 40px; height: auto; aspect-ratio: 1/1 object-fit: cover; border-radius: 50%;'
                                                )
                                            .body.d-flex.w-100(style='justify-content: space-between; align-items: center;')
                                                h5.mb-0 #{friend.fullName}
                                                .form-check
                                                    input.form-check-input(type='checkbox' name='membersId' value=friend.id)
                                                .form-check
                                                    input.form-check-input(type='checkbox' name='membersId' value=friend.id)

                            button.btn.btn-primary.w-100(type='submit') Create