extends ../../layout/layoutDefault.pug

block content
    .container.my-4
        h1.mb-4 Order success
        .alert.alert-success(role='alert') Your order has been successfully placed. We will contact you soon.
        .row
            .col-4
                h3 Information
                ul.list-group.mb-4
                    li.list-group-item <b>Name:</b> #{order.userInfo.fullName}
                    li.list-group-item <b>Phone:</b> #{order.userInfo.phone}
                    li.list-group-item <b>Address:</b> #{order.userInfo.address}
        .row
            .col-9
                h3 Order details
                table.table.mb-4(style='border: 1px solid #dee2e6;')
                    thead
                        tr.text-center
                            th(style='width: 5%') No
                            th(style='width: 5%') Image
                            th(style='width: 20%') Product
                            th(style='width: 10%') Price
                            th(style='width: 5%') Quantity
                            th(style='width: 10%') Total
                    tbody
                        each item, index in order.cartItems
                            tr.cart-list
                                td.text-center #{index + 1}
                                td
                                    img(src=item.productDetail.thumbnail alt=`${item.productDetail.title}` style='width: 100%')
                                td #{item.productDetail.title}
                                td.text-center #{item.price}$
                                td.text-center #{item.quantity}
                                td.text-center #{item.price * item.quantity}$
                    tfoot
                        tr
                            td(colspan='4')
                                h3 Total
                            td.text-center
                                h5 #{order.totalQuantity}
                            td.text-center
                                h3(style='color: red;') #{order.totalPrice}$
        a.btn.btn-primary(href='/') Continue shopping