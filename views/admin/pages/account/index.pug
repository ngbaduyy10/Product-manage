extends ../../layout/layout.pug
include ../../../mixins/alert.pug

block main
    +alert-success

    a.btn.btn-outline-success(type='button' href='account/create') Add new account

    if (accounts.length > 0)
        table.table.table-striped.table-hover
            thead
                tr
                    th #
                    th Full Name
                    th Email
                    th Phone
                    th Role
                    th Action
            tbody
                each account, index in accounts
                    tr
                        td= index + 1
                        td= account.fullName
                        td= account.email
                        td= account.phone
                        td= account.role.title
                        td
                            a.btn.btn-outline-primary(href=`account/edit/${account.id}`) Edit
                            a.btn.btn-outline-danger(href=`account/delete/${account.id}`) Delete
